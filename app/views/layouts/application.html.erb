<!DOCTYPE html>
<html>
	<head>
		<title>TellemApp</title>
		<%= csrf_meta_tags %>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body>

		<div class="container" id="header">
			<div class="col-md-12">
				<ul class="nav nav-pills justify-content-end">
					<li class="nav-item">
						<%= link_to "Tutti i post", root_path, class: "nav-link" + current_class?(root_path) %>
					</li>
					<li class="nav-item">
						<%= link_to "Nuovo Post", new_post_path, class: "nav-link" + current_class?(new_post_path) %>
					</li>
				</ul>
			</div>
		</div>
		
		<div id="main-content">

			<%= yield %>
		
		</div>
		
		<footer>
			<div class="container">
				<div class="col-md-12">
					<p>Copyright &copy; 2018</p>
				</div>
			</div>
		</footer>
	</body>
</html>
