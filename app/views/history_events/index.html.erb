<% @title = $history_events_title + $website_name %>

<div class="container" id="index">

	<div class="row">

		<div class="col-md-12">

			<h1><%= $history_events_title %></h1>

			<div id="all-history-events">

				<% @history_events.each do |event| %>

					<hr>

					<div class="history-event">
						<div class="history-event-title">

							<div class="history-event-date">
								<p>
									<span class="post-title"><%= link_to event.post.title, post_path(event.post) %></span>
									 has been
									<span class="event-type"><%= event.event_type_id %></span>
									 on
									<span class="event-date"><%= event.created_at.strftime("%e %B %Y") %></span>
									 at
									<span class="event-time"><%= event.created_at.strftime("%H:%M") %></span>
								</p>
								<p class="object-id">ID <%= event.id %></p>
							</div>

						</div>
					</div>

				<% end %>
			</div>

		</div>

	</div>

</div>
