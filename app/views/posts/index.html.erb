<div>
	<h1>All posts</h1>
		
	<div id="all-post">
		<% @posts.each do |p| %>
			
			<hr>

			<div class="post">
				<h2><%= link_to p.post_title, post_path(p) %></h2>
				<p><%= p.post_quote %></p>
			</div>
			
			<p><%= link_to "Continua a leggere...", post_path(p) %></p>
			<p><%= link_to "Modifica", edit_post_path(p) %> | <%= link_to "Cancella", post_path(p), :data => {:confirm => "Cancello questo post?", :method => "delete"} %></p>
			
		<% end %>
	</div>
	
</div>