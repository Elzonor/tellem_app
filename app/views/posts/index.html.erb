<div class="post container">
	
	<div class="col-md-12">

		<h1>Tutti i post</h1>
		
		<div id="all-post">
			<% @posts.each do |p| %>
			
				<hr>

				<div class="post">
					<h2><%= link_to p.post_title, post_path(p) %></h2>
					<p><%= p.post_quote %></p>
				</div>
			
				<p><%= link_to "Continua a leggere...", post_path(p) %></p>
				<ul>
					<li><%= link_to "Modifica", edit_post_path(p) %></li>
					<li><%= link_to "Cancella", post_path(p), :data => {:confirm => "La cancellazione sarÃ  permanente...", :method => "delete"} %></li>
				</ul>
			
			<% end %>
		</div>
	
	</div>
	
</div>