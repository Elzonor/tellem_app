<% @title = $post_edit_title + $generic_title %>

<div class="container">
	
	<div class="row">
	
		<div class="col-md-12">

			<h1><%= $post_edit_title %></h1>
		
			<%= form_for(@post) do |f| %>
	
				<div class="form-group">
					<%= f.label :title, $post_form_label_title %>
					<%= f.text_field(:title, size: 55, class: "form-control") %>
				</div>
				<div class="form-group">
					<%= f.label :abstract, $post_form_label_abstract %>
					<%= f.text_area(:abstract, cols: 55, rows: 3, class: "form-control") %>
				</div>
				<!-- <div class="form-group">
					<%= f.label :quote, "Citazione (opzionale)" %>
					<%= f.text_area(:quote, cols: 55, rows: 3, class: "form-control") %>
				</div> -->
				<div class="form-group">
					<%= f.label :body, $post_form_label_body %>
					<%= f.text_area(:body, cols: 55, rows: 10, class: "form-control") %>
				</div>
				<div class="form-group">
					<%= f.submit "Salva modifiche", class: "btn btn-primary" %>
					<span class="nav-alternative-separator"> oppure </span>
					<%= link_to "Annulla e torna indietro", :back, class: "form-cancel" %>
				</div>
		
			<% end %>
				
		</div>
		
	</div>
	
</div>