<div>
	<h1>Nuovo Post</h1>
	
	<%= form_for(@post) do |f| %>
		<div class="field">
			<!-- <%= f.label :post_title %> -->
			<%= f.text_field(:post_title, size: 55) %>
		</div>
		<div class="field">
			<!-- <%= f.label :post_quote %> -->
			<%= f.text_area(:post_quote, cols: 55, rows: 5) %>
		</div>
		<div class="field">
			<!-- <%= f.label :post_body %> -->
			<%= f.text_area(:post_body, cols: 55, rows: 13) %>
		</div>
		<div class="action">
			<%= f.submit "Pubblica modifiche" %>
		</div>
	<% end %>
	
	<%= link_to "Annulla e torna indietro", posts_path %>
	
</div>